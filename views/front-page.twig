{% extends 'base.twig' %}
{% set is_home = true %}

{% block content %}

	{% set service_list = post.get_field('homepage_services') %}

		<div class="contain">
			<div class="inner-squish">
				<h3>{{post.services_subheader}}</h3>
				<p class="lead">{{post.services_lead}}</p>
			</div>

			<ul class="list list-major list-home list-{{service_list|length}}">

			{% for service in service_list %}
				<li>
					<a href="{{service.linked_service}}" title="{{service.service_name}}">
					<div class="item-support">
						<img class="lazy" data-original="{{TimberImage(service.service_image).src('medium')}}" src="{{site.theme.link}}/assets/img/util/loader.gif" width="300" height="auto" alt="{{item.service_name}}" alt="{{item.post_title}}"/>
						<noscript><img src="{{TimberImage(service.service_image).src('medium')}}" alt="{{item.service_name}}" height="300" width="300"></noscript>
					</div>
					<div class="item-main">
						<h5 class="item-title">{{service.service_name}}</h5>
						<p>{{service.service_description}}</p>
					</div>
					</a>
				</li>
			{% endfor %}
				
		</ul> <!-- /.list-home -->

	</div>
	
	{% include 'partials/simple_content-logic.twig' %}
		
	<div class="block block-cta text-center section-content">
		<br>
		<h1>Questions? <span class="special">(123) 111-2222</span></h1>
		<p class="lead lead-cta">{{post.questions_prompt}}</p>
		<br>
		<br>
	</div>

{% endblock %}
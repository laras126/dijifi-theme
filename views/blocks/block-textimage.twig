{% extends "blocks/block.twig" %}

{% block content %}
	<div class="inner-full">

		{% if blck.text_location == 'right'%}
			<div class="col-md-8-np col-lg-9-np">
				<img src="{{TimberImage(blck.image).src|resize(600)}}" alt="">
			</div>
			<div class="col-md-4 col-lg-3-np block_textimage-caption">
				<p class="meta">{{blck.text}}</p>
			</div>
		{% else %}
			<div class="col-md-4 col-lg-3-np block_textimage-caption">
				<p class="meta">{{blck.text}}</p>
			</div>
			<div class="col-md-8-np col-lg-9-np">
				<img src="{{TimberImage(blck.image).src|resize(600)}}" alt="">
			</div>
		{% endif %}	

	</div>
{% endblock %}
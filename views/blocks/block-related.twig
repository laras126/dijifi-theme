{% extends "blocks/block.twig" %}

{% block content %}
<div class="aside">

	<span class="prompt-wrap">
		<div class="prompt"><span class="meta">Explore</span></div>
	</span>
	
	{% for related in blck.page %}
		<div class="col-sm-8">
			<h4>{{related.post_title}}</h4>
			<p>{{related.summary}}</p>	
			<p>
				<a href="{{related.guid}}" class="link-more">Read more &rarr;</a>
			</p>
		</div>
			
		<div class="col-sm-4 hide-until-sm">
			<br>
			<svg class="shape shape-{{blck.icon}}"><use xlink:href="#shape-{{blck.icon}}" /></svg>
		</div>
		{# TODO: related.link not working...using guid now I guess? #}

	{% endfor %}		
</div>
	
{% endblock %}
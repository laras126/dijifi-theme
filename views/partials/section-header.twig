<header class="section-header">
	
	{% if content.fixed_image_tf == 'true' %}
		{% include 'partials/fixed-image.twig' %}
	{% endif %}
	
	<div class="content content-contain">		

		<h2 class="note-parent">Section</h2>

		{% set mini_menu = content.menu_item_title %}

		<p>
			<span class="note-submenu">{{mini_menu}}</span>
		</p>

		<h3 class="section-title">{{content.section_title}}</h3>
		<p class="lead">{{content.lead}}</p>

	</div> <!-- /.content-contain -->
</header> <!-- /.section-header -->

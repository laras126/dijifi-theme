{% block html_head_container %}
{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig" id="pageTop">

		<div class="svgsprites">{% include 'partials/svg-defs.svg' %}</div>

		<header class="site-header" role="banner">
			{% block header %}
				<div class="contain">					
					{% include 'headers/site_header.twig' %}
				</div> <!-- /.contain -->
			{% endblock %}	
		</header>

		<main id="content" class="main" role="main">

			{% include 'partials/page_header-logic.twig' %}
			
			<div class="page-body {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>

			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}

			<footer class="page-footer">
				<div class="contain">
					<h4>Page Footer</h4>
				</div>
			</footer>

		</main>

		{% block footer %}

			<footer id="footer" class="site-footer" role="contentinfo">
				{% include 'footer.twig' %}
			</footer>

			{{ function('wp_footer') }}
			
		{% endblock %}

		<div class="top-link top-link-bottom">
			<a href="#pageTop"><svg class="shape shape-arrow-up"><use xlink:href="#shape-arrow-up" /></svg></a>
		</div>

	</body>
</html>

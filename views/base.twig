{% block html_head_container %}
{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<div class="svgsprites">{% include 'partials/svg-defs.svg' %}</div>
		<header role="banner" class="site-header">
			{% block header %}
				<div class="contain">
					<div class="inner">
					
						<div class="col-xs-4 col-md-2">
							<a class="header-logo" href="/" title="{{site.name}}" rel="home">
								<svg class="shape shape-logo"><use xlink:href="#shape-logo" /></svg>
							</a>
						</div>
				
						<div class="menu-link col-xs-8" style="margin-top: 1rem">
							<a href="#menu">
								<span></span>
								<span></span>
								<span></span>
							</a>    
						</div> <!-- /.menu-link -->

						<nav id="menu" class="menu-main col-xs-12 col-md-10" role="navigation">	
							<ul class="menu-items">
								{% for item in main_nav.items %}
									<li class="{{item.classes | join(' ')}}">
										<a href="{{item.link}}">{{item.title}}</a>
									</li>
								{% endfor %}
							</ul>
						</nav><!-- /#menu -->

				</div> <!-- /.inner -->	
			</div> <!-- /.content-contain -->
			{% endblock %}
		</header>


		<main id="content" role="main">

			<header class="page-header">
				{% include 'partials/header-logic.twig' %}
			</header>
			
			<div class="page-body {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>

			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}

			<footer class="page-footer">
				<div class="contain">
					<h4>Page Footer</h4>
				</div>
			</footer>

		</main>

		{% block footer %}
			<footer id="footer" class="site-footer" role="contentinfo">
				<div class="contain">
					{% include 'footer.twig' %}
				</div>
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}

	</body>
</html>

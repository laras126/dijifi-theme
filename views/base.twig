{% block html_head_container %}
{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<div class="svgsprites">{% include 'partials/svg-defs.svg' %}</div>

		<header role="banner" class="site-header">
			{% block header %}
				<div class="contain">					
					{% include 'headers/site_header.twig' %}
				</div> <!-- /.contain -->
			{% endblock %}	
		</header>


		<main id="content" role="main" class="main">

			{% include 'partials/main_header-logic.twig' %}
			
			<div class="page-body {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>

			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}

			<footer class="page-footer">
				<div class="contain">
					<h4>Page Footer</h4>
				</div>
			</footer>

		</main>

		{% block footer %}
			<footer id="footer" class="site-footer" role="contentinfo">
				<div class="contain">
					{% include 'footer.twig' %}
				</div>
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}

	</body>
</html>

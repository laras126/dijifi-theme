{% extends "base.twig" %}

{% block content %}

	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				
				<header>
					<h1 class="article-h1">{{post.title}}</h1>
					<h2>{{post.tagline}}</h2>
					<p>{{post.summary}}</p>	
				</header>

				<div class="article-body">
					{% include 'partials/content-logic.twig' %}
				</div>

			</section>
		</article>
	</div> <!-- /content-wrapper -->

{% endblock %}
